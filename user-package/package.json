
{
  "name": "email-sender-user-package",
  "version": "1.0.0",
  "description": "Email Sender User Package - Complete Application",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run client:dev\" \"npm run server:dev\"",
    "client:dev": "cd client && npm run dev",
    "server:dev": "NODE_ENV=development tsx server/index.ts",
    "build": "npm run client:build && npm run server:build",
    "client:build": "cd client && npm run build",
    "server:build": "tsc --project server/tsconfig.json",
    "start": "concurrently \"npm run client:start\" \"npm run server:start\"",
    "client:start": "cd client && npm run preview",
    "server:start": "node server/dist/index.js",
    "install-all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "multer": "^1.4.5-lts.1",
    "concurrently": "^8.2.2",
    "sharp": "^0.33.0",
    "puppeteer": "^21.5.2",
    "qrcode": "^1.5.3",
    "html-pdf-node": "^1.0.8",
    "archiver": "^6.0.1",
    "mammoth": "^1.6.0",
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.3"
  }
}
